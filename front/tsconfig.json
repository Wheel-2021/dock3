{
  // https://nuxt.com/docs/guide/concepts/typescript
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./src/*"]
    },
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "traceResolution": true,
    "types": ["vitest/globals", "vue"]
  },
  "extends": "./.nuxt/tsconfig.json",
  // "exclude": ["node_modules", "**/*.test.ts"],
  // "include": ["./src/**/*"]
}
